		<root>
			<level value="DEBUG" />
			<!--ALL, DEBUG, INFO, WARN, ERROR, FATAL, OFF-->
			<appender-ref ref="AnsiColorTerminalAppender" />
			<!--
			<appender-ref ref="FileAppender" />
			<appender-ref ref="RollingFileAppender" />
			-->
		</root>
	</log4net>
</configuration>